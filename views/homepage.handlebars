{{#each posts as |post|}}
<div>
    
    <p><a href="{{post.title}}">{{post.title}}</a></p>
    <p>by {{post.user_id}}</p>
    <p>{{post.timestamp}}</p>
    <p>{{{post.body}}}</p>   
    <ul>
    {{#each post.Comments as |comment|}}
      <li>
        {{comment.User.username}}{{comment.comment}}
      </li>
    {{/each}}
    </ul>       
</div>
{{/each}}